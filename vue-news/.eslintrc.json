{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jest": true,
		"node": true
	},
	"extends": [ "plugin:vue/recommended" ],
	"plugins": [ "html", "standard", "vue" ],
	"rules": {
		"newline-per-chained-call": [
			"error",
			{
				"ignoreChainWithDepth": 1
			}
		],
		"vue/html-indent": [
			"error",
			"tab",
			{ "alignAttributesVertically": true }
		],
		"indent": [ "error", "tab" ],
		"semi": [ "error" ],
		"quotes": [ "error", "single" ],
		"no-unused-vars": "error",
		"no-console": "off",
		"object-curly-newline": [
			"error",
			{
				"ObjectExpression": "always",
				"ObjectPattern": {
					"multiline": true
				},
				"ImportDeclaration": "never",
				"ExportDeclaration": {
					"multiline": true,
					"minProperties": 3
				}
			}
		]
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"sourceType": "module"
	}
}
