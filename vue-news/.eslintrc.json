{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": [ "standard", "plugin:vue/essential", "eslint:recommended" ],
	"plugins": [ "import", "node", "promise", "standard" ],
	"rules": {
		"semi": [ "error", "always" ],
		"quotes": [ "error", "single" ],
		"no-unused-vars": "error",
		"no-console": "off",
		"object-curly-newline": [
			"error",
			{
				"ObjectExpression": "always",
				"ObjectPattern": {
					"multiline": true
				},
				"ImportDeclaration": "never",
				"ExportDeclaration": {
					"multiline": true,
					"minProperties": 3
				}
			}
		]
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 6,
		"sourceType": "module"
	}
}
